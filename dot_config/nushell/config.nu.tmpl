let carapace_completer = {|spans|
    carapace $spans.0 nushell ...$spans | from json
}

$env.config = {
  show_banner: false
  cursor_shape: {
    emacs: line
  }
  rm: {
    always_trash: true
  }
  completions: {
    external: {
      enable: true
        completer: $carapace_completer
        }
    }
  shell_integration: {
    osc2: true
    osc7: true
    osc8: true
    osc9_9: false
    osc133: true
    osc633: true
    reset_application_mode: true
  }
}

use ~/.cache/starship/init.nu

source ~/.cache/carapace/init.nu

alias sudo = doas
alias core-ssh = ssh
alias ssh = kitten ssh
{{- if eq .osid "linux-arch" }}
alias hx = 'helix'
{{- else }}
